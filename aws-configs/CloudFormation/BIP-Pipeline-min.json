    "Outputs": {
        "VPC": {
            "Description": "VPC ID",
            "Value": {
                "Ref": "VPC"
            }
        },
        "NatBox": {
            "Description": "Nat servers",
            "Value": {
                "Fn::GetAtt": [
                    "EC2InstanceNAT1a",
                    "PublicIp"
                ]
            }
        }
    }
