                            "Ref": "AWS::StackId"
                        }
                    },
                    {
                        "Key": "functionality",
                        "Value": "elb nat"
                    }
                ]
            }
        },
        "SubnetRouteTableAssociationSubnetPublic1c": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubnetPublic1c"
                },
                "RouteTableId": {
                    "Ref": "RouteTablePublic"
                }
            }
        },
        "SubnetNetworkAclAssociationSubnetPublic1c": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
