                    "Ref": "NetworkAcl"
                }
            }
        },
        "SubnetWorker1a": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "AWSRegion"
                            },
                            "e"
                        ]
                    ]
                },
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "VPCNetwork"
                            },
                            {
                                "Fn::FindInMap": [
                                    "SubnetConfig",
                                    "SubnetWorker1a",
                                    "CIDR"
                                ]
                            }
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "Application",
                        "Value": {
                            "Ref": "AWS::StackId"
                        }
                    },
                    {
                        "Key": "functionality",
                        "Value": "Worker Layer"
                    }
                ]
            }
        },
        "SubnetRouteTableAssociationSubnetWorker1a": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubnetWorker1a"
                },
                "RouteTableId": {
                    "Ref": "RouteTablePrivate"
                }
            }
        },
        "SubnetNetworkAclAssociationSubnetWorker1a": {
