        "SubnetWorker1c": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "AWSRegion"
                            },
                            "c"
                        ]
                    ]
                },
                "VpcId": {
                    "Ref": "VPC"
                },
